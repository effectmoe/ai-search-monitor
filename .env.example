# Environment Configuration Template
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
API_PORT=3001
MAX_REQUEST_SIZE=10mb
TRUST_PROXY=1

# Security
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars
DEFAULT_PASSWORD=password123

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Vercel KV (Redis-compatible)
# Required for Vercel KV integration
KV_URL=your-vercel-kv-url
KV_REST_API_URL=your-kv-rest-api-url
KV_REST_API_TOKEN=your-kv-rest-api-token
KV_REST_API_READ_ONLY_TOKEN=your-kv-read-only-token

# Database Configuration (SQLite for local development)
DATABASE_PATH=./data/ai-monitor.db

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring
HEALTH_CHECK_INTERVAL=30000
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Platform API Keys (Add your actual keys)
CHATGPT_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-google-gemini-api-key
CLAUDE_API_KEY=your-anthropic-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key

# TaskMagic (if using)
TASKMAGIC_API_KEY=your-taskmagic-api-key
TASKMAGIC_WEBHOOK_SECRET=your-taskmagic-webhook-secret

# Rate Limiting (default values, adjust as needed)
DEFAULT_RATE_LIMIT_WINDOW_MS=60000
DEFAULT_RATE_LIMIT_MAX_REQUESTS=100

# Analytics & Metrics
ENABLE_METRICS_COLLECTION=true
METRICS_RETENTION_DAYS=30

# Notification Settings (optional)
WEBHOOK_URL=https://your-webhook-url.com/notifications
ALERT_EMAIL=your-alerts@example.com

# Development Settings
ENABLE_DEBUG_ROUTES=false
MOCK_EXTERNAL_APIS=false